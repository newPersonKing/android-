<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eff2f6">

    <com.ue.common.widget.edittext.ClearEditText
        android:id="@+id/login_user"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="30dp"
        android:layout_alignRight="@+id/login_password"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:drawableLeft="@drawable/em_icon_account"
        android:drawablePadding="5dp"
        android:hint="用户名"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"/>

    <com.ue.common.widget.edittext.ClearEditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/login_user"
        android:layout_marginLeft="30dp"
        android:layout_toLeftOf="@+id/login_psw_visibility"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:drawableLeft="@drawable/em_icon_pwd"
        android:drawablePadding="5dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/login_psw_visibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/login_password"
        android:layout_alignBottom="@id/login_password"
        android:src="@drawable/svg_visible"/>

    <Button
        android:id="@+id/login_register"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/login_password"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="@color/white_ffffff"
        android:background="@drawable/slt_common_btn"/>

</RelativeLayout>