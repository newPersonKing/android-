<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="20dp"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@id/game_my_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/game_rect"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@id/game_my_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="您"
            android:textColor="@color/black_000000"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@id/game_my_image"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/game_my_chesses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" × .."
                android:textColor="@color/black_000000"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#f3fbff"
        android:gravity="center"
        android:text="VS"
        android:textColor="@color/black_000000"
        android:textSize="30sp"/>

    <LinearLayout
        android:id="@id/game_oppo_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/game_rect_normal"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@id/game_oppo_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="......"
            android:textColor="@color/black_000000"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@id/game_oppo_image"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/game_oppo_chesses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" × .."
                android:textColor="@color/black_000000"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>